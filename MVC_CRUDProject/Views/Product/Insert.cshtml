@model MVC_CRUDProject.Models.Product
@{
    ViewBag.Title = "Insert";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
               <br />
                <label>Product Name</label>
                @Html.TextBoxFor(x => x.ProductName,new {@class="form-control",required="required", maxlength="10" })
            </div>

            <div class="form-group">
               
                <label>Kategori</label>
                @Html.DropDownListFor(x=>x.Category.CategoryID,(List<SelectListItem>)ViewBag.dgr,new { @class="form-control" } )
            </div>

            <div class="form-group">
                
                <label>Stok</label>
                @Html.TextBoxFor(x => x.UnitsInStock, new { @class = "form-control",required="required" })
            </div>

            <div class="form-group">
               
                <label>Fiyat</label>
                @Html.TextBoxFor(x => x.UnitPrice, new { @class = "form-control",required="required" })
            </div>

            <button type="submit" class="btn btn-primary">Ekle</button>
        </div>
    </div>
}

