@model MVC_CRUDProject.Models.Employee
@{
    ViewBag.Title = "Insert";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <br />
                <label>Name</label>
                @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control", required="required"})
                @Html.ValidationMessageFor(x => x.FirstName, "", new { @style = "color:red" })

            </div>
            <div class="form-group">
                <label>Surname</label>
                @Html.TextBoxFor(x => x.LastName, new { @class = "form-control", required="required" })
              @Html.ValidationMessageFor(x=>x.LastName,"",new { @style="color:red"})

            </div>
            <div class="form-group">
                <label>City</label>
                @Html.DropDownListFor(x => x.EmployeeID, (List<SelectListItem>)ViewBag.city, new { @class = "form-control" })

            </div>
            <button type="submit" class="btn btn-primary">Ekle</button>
        </div>
    </div>
}