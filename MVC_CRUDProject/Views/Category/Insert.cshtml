@model MVC_CRUDProject.Models.Category
@{
    ViewBag.Title = "Insert";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <br />
                <label>Category Name</label>
                @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
                @Html.ValidationMessageFor(x=>x.CategoryName,"",new { @style="color:red"})
            </div>


            <div class="form-group">

                <label>Description</label>
                @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
             @Html.ValidationMessageFor(x=>x.Description,"",new {@style="color:red" })
            </div>

           
            <button type="submit" class="btn btn-primary">Add</button>
            
        </div>
    </div>
    
}

